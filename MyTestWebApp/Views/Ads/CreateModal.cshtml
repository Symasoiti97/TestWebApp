@model AdCreateModel

<div class="modal fade" id="addAd" tabindex="-1" role="document">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-card-header">
                <h4 class="modal-title" id="addAdLabel">Добавить объявление</h4>
                <button type="button" class="close" data-dismiss="modal"><span>X</span></button>

                <div class="modal-body">
                    <form action="Create" role="form">
                        <div class="form-group">
                            <label asp-for="Number" class="col-form-label"></label>
                            <input asp-for="Number" class="form-form-control" />
                            <span asp-validation-for="Number" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Text" class="col-form-label"></label>
                            <input asp-for="Text" class="form-form-control" />
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Image" class="col-form-label"></label>
                            <input asp-for="Image" class="form-form-control" type="file" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </form>
                </div>

                <div class="modal-modal-footer">
                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary" data-sфму="modal">Добавить</button>
                </div>
            </div>
        </div>
    </div>
</div>