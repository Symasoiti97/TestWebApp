
@{
    ViewData["Title"] = "Index";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Вы вошли как  @User.Identity.Name</h1>
    <a asp-action="Logout" asp-controller="Account" class="btn btn-danger">Выйти?</a>
}
else
{
    <h1>Вы не вошли в аккаунт :(</h1>
    <a asp-action="Login" asp-controller="Account" class="btn btn-primary">Войти</a>
    <hr />
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary">Создать новый аккаунт</a>
}

